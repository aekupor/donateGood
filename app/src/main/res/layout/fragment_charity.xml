<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvCharityCharityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Charity X" />

    <ImageView
        android:id="@+id/ivCharityChairtyImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvCharityCharityTitle"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCharityMoneyRaised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCharityChairtyImage"
        android:layout_marginTop="4dp"
        tools:text="100" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCharitySellingOfferings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvCharityMoneyRaised"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp" />
</RelativeLayout>