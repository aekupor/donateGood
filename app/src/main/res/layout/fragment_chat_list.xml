<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvChatListTitle"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/tvChatListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="View your chats:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:backgroundTint="@color/lightGreen"
        android:src="@drawable/ic_baseline_add_24"
        android:id="@+id/fabNewChat"
        app:fabSize="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@+id/tvViewAllUsersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rvUsers"
        android:layout_marginBottom="0dp"
        android:text="Chat with:"
        android:textColor="#040404"
        android:textStyle="bold" />
</RelativeLayout>