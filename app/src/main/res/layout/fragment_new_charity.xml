<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.NewCharityFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="charity name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCharityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="charity website">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCharityWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="charity grouping">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCharityGrouping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCharityUploadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/purple"
        android:theme="@style/Theme.MaterialComponents"
        app:cornerRadius="5dp"
        android:text="Upload Profile Picture" />

    <ImageView
        android:id="@+id/ivNewCharityProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewCharitySubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/purple"
        android:theme="@style/Theme.MaterialComponents"
        app:cornerRadius="5dp"
        android:text="Submit" />

</LinearLayout>