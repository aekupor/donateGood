<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OtherUserProfileFragment">


    <TextView
        android:id="@+id/tvOtherProfileProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ashlee" />

    <ImageView
        android:id="@+id/ivOtherProfileProfileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvOtherProfileProfileName"
        android:layout_marginTop="4dp"
        tools:src="@tools:sample/avatars" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOtherUserSelling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonLinearOther"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvOtherUserMoneyRaised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivOtherProfileProfileImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivOtherProfileProfileImage"
        tools:text="100" />

    <LinearLayout
        android:id="@+id/buttonLinearOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivOtherProfileProfileImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOtherBoughtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Bought"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOtherSoldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Sold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOtherSellingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Selling"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/buttonLinearOther"/>

    <ProgressBar
        android:id="@+id/pbOtherProfileLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLinearOther"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/tvOtherUserMoneyRaised"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tvOtherUserMoneyRaised"
        android:text="Chat" />

    <RatingBar
        android:id="@+id/rbOtherUserProfile"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOtherProfileProfileName"
        android:layout_marginStart="4dp"
        android:theme="@style/RatingBar"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tvOtherUserMoneyRaised" />
</RelativeLayout>