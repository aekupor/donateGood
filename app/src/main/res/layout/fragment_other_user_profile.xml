<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OtherUserProfileFragment">


    <TextView
        android:id="@+id/tvOtherProfileProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ashlee" />

    <ImageView
        android:id="@+id/ivOtherProfileProfileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvOtherProfileProfileName"
        android:layout_marginTop="4dp"
        tools:src="@tools:sample/avatars" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOtherUserSelling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvOtherBoughtTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvOtherUserMoneyRaised"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivOtherProfileProfileImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivOtherProfileProfileImage"
        tools:text="100" />

    <TextView
        android:id="@+id/tvOtherBoughtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOtherProfileProfileImage"
        android:layout_marginTop="4dp"
        android:text="See What Bought" />

    <TextView
        android:id="@+id/tvOtherSoldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOtherProfileProfileImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tvOtherBoughtTitle"
        android:text="See What Sold" />

    <TextView
        android:id="@+id/tvOtherSellingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOtherProfileProfileImage"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tvOtherSoldTitle"
        android:text="See What Selling" />

    <ProgressBar
        android:id="@+id/pbOtherProfileLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvOtherSellingTitle"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvOtherUserMoneyRaised"
        android:visibility="invisible" />
</RelativeLayout>