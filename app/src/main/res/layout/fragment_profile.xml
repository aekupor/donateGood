<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfileProfileName"
        android:layout_marginTop="4dp"
        android:text="Logout" />

    <TextView
        android:id="@+id/tvProfileProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ashlee" />

    <ImageView
        android:id="@+id/ivProfileProfileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/btnLogout"
        android:layout_marginTop="4dp"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnProfileTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileProfileImage"
        android:layout_marginTop="4dp"
        android:text="Take Photo" />

    <Button
        android:id="@+id/btnProfileUploadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnProfileTakePhoto"
        android:layout_marginTop="4dp"
        android:text="Upload Photo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBoughtItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnProfileUploadPhoto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>