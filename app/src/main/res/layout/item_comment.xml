<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProfileImageComment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUsernameComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/ivProfileImageComment"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:text="ashlee" />

    <TextView
        android:id="@+id/tvTextComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameComment"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivProfileImageComment"
        android:layout_weight="1"
        android:textColor="#000000"
        tools:text="hey this is my comment" />

    <RatingBar
        android:id="@+id/tvRatingComment"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/ivVerified"
        android:numStars="5"
        android:stepSize=".5"
        android:theme="@style/RatingBar" />

    <ImageView
        android:id="@+id/ivVerified"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/tvUsernameComment"
        app:srcCompat="@drawable/comment_verified" />
</RelativeLayout>