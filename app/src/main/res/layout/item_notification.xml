<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="42dp"
        tools:text="did X pay you Y for offering Z?" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApproveNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNotificationText"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/btnDenyNotification"
        android:backgroundTint="#FFFFFF"
        android:text="Approve"
        android:textColor="@color/purple"
        android:theme="@style/Theme.MaterialComponents"
        app:cornerRadius="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDenyNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNotificationText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#FFFFFF"
        android:text="Deny"
        android:textColor="@color/purple"
        android:theme="@style/Theme.MaterialComponents"
        app:cornerRadius="5dp" />

</RelativeLayout>