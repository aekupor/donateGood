<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    card_view:cardCornerRadius = "8dp"
    android:id ="@+id/card_view"
    android:layout_margin = "10dp"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardElevation="8dp"
    android:background="#E6E6E6"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Test offering 1" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offeringRatingBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        tools:text="$25" />

    <ImageView
        android:id="@+id/ivOfferingPhoto"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offeringRatingBar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/ivCharityProfile"
        android:textSize="18sp"
        tools:text="Buy From a Black Woman" />

    <ImageView
        android:id="@+id/ivCharityProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/offeringRatingBar"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/offeringRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOfferingPhoto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvUser"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOfferingPhoto"
        android:layout_marginTop="4dp"
        tools:text="ashlee" />

</RelativeLayout>
</androidx.cardview.widget.CardView>
